<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="../css/sessions.css">
    
    <%- include('partials/head.ejs') %>
</head>

<body>

    <%- include('partials/aside.ejs') %>
        <section id="content">
            <!---------- left aside ------------->

            <%- include('partials/header.ejs') %>

                <!----------- end of sidebar ----------->

                <main>
                    <div class="header">
                        <h1> Randevular</h1>
                    </div>

                    <div class="main main-sessions">


                        <div class="left">
                            <div class="calendar">
                                <div class="month">
                                    <i class="prev ph ph-caret-left"></i>
                                    <div class="calendar-head">ppp ppp</div>
                                    <i class="next ph ph-caret-right"></i>
                                </div>
                                <div class="weekdays">
                                    <div>Pt</div>
                                    <div>Sa</div>
                                    <div>Ça</div>
                                    <div>Pe</div>
                                    <div>Cu</div>
                                    <div>Ct</div>
                                    <div>Pz</div>
                                </div>
                                <div class="days">

                                </div>
                                <div class="goto-today">
                                    <div class="goto">
                                        <input type="text" class="date-input" placeholder="mm//yyyy">
                                        <button class="goto-btn">Tarihe Git</button>
                                    </div>
                                    <button class="today-btn">Bugüne Git</button>
                                </div>
                            </div>
                        </div>

                        <div class="right">

                            <div class="today-date">

                                <div class="appointment-list"> pp ppp ppp</div>

                            </div>
                            <div class="add-session"><button id="add-session-btn">Randevu Ekle</button></div>
                            <div class="events-all-doctors">


                            </div>


                        </div>

                    </div>
                </main>
                <div class="modal modal_add_session ">

                    <form action="" onsubmit="return false" method="POST" id="add-session-form">
                        <h2>Randevu Ekle</h2>

                        <div class="add-event-body">
                            <div class="inputs">
                                <span>İşlem Tipi:</span>

                                <select class="proccess_type_add">
                                    <option value="" selected disabled hidden>
                                        Hizmet Seçiniz
                                    </option>
                                    <% services.forEach((service,index)=> { %>
                                        <option value="<%= index %>">
                                            <%= service.serviceName %>
                                        </option>

                                        <% }) %>
                                </select>

                                <div class="selected_proccess_type_add">

                                </div>

                            </div>
                            <div class="inputs">Hasta:
                                <select name="user" class="" id="" required>

                                    <% users.forEach(user=> { %>
                                        <option value="<%= user._id %>">
                                            <%= user.name %>
                                        </option>
                                        <% }) %>
                                </select>

                            </div>

                            <div class="inputs" hidden>timeIndex:
                                <input type="text" name="timeIndexes" id="" class="timeIndex">
                            </div>
                            <div class="inputs" hidden>timeIndex1:
                                <input type="text" name="timeIndexes" id="" class="timeIndex">
                            </div>
                            <div class="inputs">Başlangıç Saati:
                                <input type="text" name="startHour" id="" class="startHour" readonly>
                            </div>
                            <div class="inputs">Bitiş Saati:
                                <input type="text" name="endHour" id="" class="endHour" readonly>
                            </div>

                            <div class="inputs">Doktor:
                                <input type="text" id="" name="doctorName" class="doctor-name" readonly>
                            </div>
                            <div class="inputs" style="display: none;">DoktorID:
                                <input type="text" name="doctor" id="" class="doctor-id">
                            </div>
                            <div class="inputs">Tarih:
                                <input type="date" name="date" class="event-date-from">
                            </div>


                            <div class="inputs">Not:
                                <input type="text" name="description" placeholder="notlar">
                            </div>

                            <button type="submit" class="save_button">Seans Ekle +</button>


                            <span class="cancel_button">Vazgeç</span>

                        </div>
                    </form>

                </div>
                <div class="modal modal_update_session ">

                    <h2>Seans Düzenle</h2>

                    <form method="POST">
                        <div class="inputs">

                            <div class="title">
                                <span>İşlem Tipi:</span>

                                <select class="proccess_type_update">
                                    <option value="" selected disabled hidden>
                                        Hizmet Seçiniz
                                    </option>
                                    <% services.forEach((service,index)=> { %>
                                        <option value="<%= index %>">
                                            <%= service.serviceName %>
                                        </option>

                                        <% }) %>
                                </select>

                                <div class="selected_proccess_type_update">

                                </div>


                            </div>

                        </div>
                        <div class="add-event-body">
                            <div class="inputs">Hasta:
                                <select name="user" class="user" id="user_update">

                                    <% users.forEach(user=> { %>
                                        <option value="<%= user._id %>">
                                            <%= user.name %>
                                        </option>
                                        <% }) %>
                                </select>

                            </div>

                            <div class="inputs" hidden>sessionID:
                                <input type="text" name="sessionID" class="sessionID">
                            </div>

                            <div class="inputs">Not:
                                <input type="text" name="description" placeholder="notlar" class="description">
                            </div>


                            <button type="submit" class="save_update_button">Kaydet</button>

                            <span class="cancel_button">Vazgeç</span>

                        </div>
                    </form>

                </div>
                <div class="information-modal">AAAA</div>
        </section>

        <script type="module" src="/js/requests.js"></script>
        <script type="module" src="/js/ui.js"></script>
        <script type="module" src="../js/appointments.js"></script>

        <script src="/js/sidebar.js"></script>

</body>

</html>