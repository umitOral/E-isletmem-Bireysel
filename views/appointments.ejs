<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="../css/sessions.css">

    <%- include('partials/head.ejs') %>

    <script src="/js/inner_modules/closeModal.js"></script>
</head>

<body>

    <%- include('partials/aside.ejs') %>
        <section id="content">
            <!---------- left aside ------------->

            <%- include('partials/header.ejs') %>

                <!----------- end of sidebar ----------->

                <main>
                    <div class="header">
                        <h1> Randevular</h1>
                    </div>

                    <div class="main main-sessions">


                        <div class="left">
                            <div class="calendar">
                                <div class="month">
                                    <i class="prev ph ph-caret-left"></i>
                                    <div class="calendar-head">ppp ppp</div>
                                    <i class="next ph ph-caret-right"></i>
                                </div>
                                <div class="weekdays">
                                    <div>Pt</div>
                                    <div>Sa</div>
                                    <div>Ça</div>
                                    <div>Pe</div>
                                    <div>Cu</div>
                                    <div>Ct</div>
                                    <div>Pz</div>
                                </div>
                                <div class="days">

                                </div>
                                <div class="goto-today">
                                    <button class="today-btn">Bugüne Git</button>
                                </div>
                            </div>
                        </div>

                        <div class="right">

                            <div class="today-date">

                                <div class="appointment-list"> pp ppp ppp</div>

                            </div>
                            <div class="add-session"><button id="add-session-btn">Randevu Ekle</button></div>
                            <div class="events-all-doctors">


                            </div>


                        </div>

                    </div>
                </main>
                <div class="modal modal_add_session ">
                    <h2>Randevu Ekle</h2>
                    <form action="" onsubmit="return false" method="POST" id="add-session-form">
                        

                            <div class="inputs">
                                <span>Hasta:</span>
                                <div style="display: flex; gap: 1rem;">
                                    <input required type="text" list="user-names" name="user" id="user-select" autocomplete="off"
                                    placeholder="isim soyisim">
                               <button id="add-user-btn" type="button" class="btn-mini">Yeni+</button>
                                </div>
                               
                                    
                                <datalist  id="user-names">
                                    <% locals.usersNames.forEach(element=> { %>

                                        <option data-userid="<%= element._id %>"
                                            data-userdata="<%= element.name+""+element.surname %>"
                                            value="<%= element.name+" "+element.surname %>">

                                        </option>
                                        <% }) %>

                                </datalist>



                            </div>
                            <div class="inputs">
                                <span>Devam eden İşlemler:</span>
                                <select class="proccess_type_add" id="proccess_type_add">
                                    <option value="" selected hidden disable>Önce hasta seçiniz</option>
                                </select>

                                <div class="selected_proccess_type_add">

                                </div>

                            </div>
                            <div class="inputs">
                                <span>Yeni İşlemler:</span>
                                <select class="proccess_type_new" id="proccess_type_new">
                                    <option value="" selected hidden disable>İşlem Seçiniz</option>
                                    <% locals.company.services.forEach(element=> { %>
                                        <% if (element.activeorNot===true) { %>
                                            <option data-price="<%= element.servicePrice %>"
                                                data-id="<%= element._id %>" value="<%= element.serviceName %>">
                                                <%= element.serviceName %>
                                            </option>
                                            <% } %>
                                                <% }) %>
                                </select>

                                <div class="selected_proccess_type_new">

                                </div>

                            </div>



                            <div class="inputs" hidden>timeIndex:
                                <input type="text" name="timeIndexes" id="" class="timeIndex">
                            </div>
                            <div class="inputs" hidden>timeIndex1:
                                <input type="text" name="timeIndexes" id="" class="timeIndex">
                            </div>
                            <div class="inputs">Başlangıç Saati:
                                <input type="text" name="startHour" id="" class="startHour" readonly>
                            </div>
                            <div class="inputs">Bitiş Saati:
                                <input type="text" name="endHour" id="" class="endHour" readonly>
                            </div>

                            <div class="inputs">Personel:
                                <input type="text" id="" name="doctorName" class="doctor-name" readonly>
                            </div>
                            <div class="inputs" style="display: none;">PersnoelID:
                                <input type="text" name="doctor" id="" class="doctor-id">
                            </div>
                            <div class="inputs">Tarih:
                                <input type="date" name="date" class="event-date-from" readonly>
                            </div>


                            <div class="inputs">Not:
                                <input type="text" name="description" placeholder="notlar">
                            </div>

                            <button type="submit" class="save_button">Seans Ekle +</button>


                            <span type="button" id="cancel-add-appointment" class="cancel_button" onclick="closeModal(this)">Vazgeç</span>

                        
                    </form>

                </div>

                <div class="information-modal-wrapper"></div>

        </section>
        <div class="add_customer modal">
            <h2>Yeni Hasta Ekle</h2>
            <form action="./users/createUser" method="POST" id="add-user-form">
                <div class="inputs ">
                    <span>İsim</span>
                    <input type="text" name="name" id="user-name" required
                        placeholder="İsim giriniz">
                </div>

                <div class="inputs ">
                    <span>Soyisim</span>
                    <input type="text" name="surname" id="surname" placeholder="soyisim giriniz" required>
                </div>
                <div class="inputs ">
                    <span>Telefon</span>
                    <input placeholder="başında '0' olmadan girin" type="tel" name="phone" id="phone" required pattern="[0-9]{10}" maxlength="10">
                </div>
                <div class="options">
                    <span>Cinsiyet:</span>
                    <div>
                        <input type="radio" id="sex-women" name="sex" value="female" >
                        &nbsp; <label for="sex-women">Kadın</label>

                        <input type="radio" id="sex-man" name="sex" value="male">
                        &nbsp; <label for="sex-man">Erkek</label>

                    </div>

                </div>
                <div class="inputs ">
                    <span>Doğum Tarihi</span>
                    <input type="date" name="birtdhDate" id="birtdhDate">
                </div>
                <div class="inputs ">
                    <span>Adres</span>
                    <input type="text" name="address" id="address">

                </div>
                
                <div class="inputs ">
                    <span>Mail</span>
                    <input type="email" name="email" id="email">
                </div>

                <div class="inputs ">
                    <span>Fatura Bilgisi:</span>
                    <textarea name="billingAddress" id="billingAddress" rows="2"></textarea>
                </div>
                <div class="inputs">
                    <span>Açıklama</span>
                    <textarea name="notes" id="notes" rows="2"></textarea>
                </div>
                <button type="submit" class="save_button" id="add-user">Kaydet</button>
                <button type="button" class="cancel_button" onclick="closeModal(this)">Vazgeç</button>
            </form>
        </div>

        <%- include('partials/loader.ejs') %>


        <script type="module" src="/js/appointments.js"></script>
        <!-- <script type="module" src="../bundles/appointments.js"></script> -->

        <script src="/js/sidebar.js"></script>

</body>

</html>