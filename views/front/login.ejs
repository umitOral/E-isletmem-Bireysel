
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <title>Landrick - Saas & Software Landing Page Template</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Premium Bootstrap 4 Landing Page Template" />
        <meta name="keywords" content="Saas, Software, multi-uses, HTML, Clean, Modern" />
        <meta name="author" content="Shreethemes" />
        <meta name="email" content="shreethemes@gmail.com" />
        <meta name="website" content="http://www.shreethemes.in" />
        <meta name="Version" content="v2.5.1" />
        <!-- favicon -->
        <link rel="shortcut icon" href="front/images/favicon.ico">
        <!-- Bootstrap -->
        <link href="front/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <!-- Icons -->
        <link href="front/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/front/css/unicons.css">
        <!-- Main Css -->
        <link href="front/css/style.css" rel="stylesheet" type="text/css" id="theme-opt" />
        <link href="front/css/colors/default.css" rel="stylesheet" id="color-opt">
        <link rel="stylesheet" href="css/general_style.css">
    </head>

    <body>
        <!-- Loader -->
        <!-- <div id="preloader">
            <div id="status">
                <div class="spinner">
                    <div class="double-bounce1"></div>
                    <div class="double-bounce2"></div>
                </div>
            </div>
        </div> -->
        <!-- Loader -->

        <%- include('../partials/front/header.ejs') %>

       
        
        <!-- Hero Start -->
        <section class="bg-home bg-circle-gradiant d-flex align-items-center">
            <div class="bg-overlay bg-overlay-white"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-8"> 
                        <div class="card login-page bg-white shadow rounded border-0">
                            <div class="card-body">
                                <h4 class="card-title text-center">Giriş</h4>  
                                <div class="res-message alert alert-danger d-none" role="alert">
                                    <%= locals.message %>
                                  </div>
                                <form class="login-form mt-4">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group position-relative">
                                                <label>Email <span class="text-danger">*</span></label>
                                                <i data-feather="user" class="fea icon-sm icons"></i>
                                                <input type="email" class="form-control pl-5" placeholder="Email" name="email" required="">
                                            </div>
                                        </div>

                                        <div class="col-lg-12">
                                            <div class="form-group position-relative">
                                                <label>Şifre <span class="text-danger">*</span></label>
                                                <i data-feather="key" class="fea icon-sm icons"></i>
                                                <input type="password" class="form-control pl-5" name="password" placeholder="Şifre" required="">
                                            </div>
                                        </div>

                                        <div class="col-lg-12">
                                            <div class="d-flex justify-content-between">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                        <label class="custom-control-label" for="customCheck1">Beni Hatırla</label>
                                                    </div>
                                                </div>
                                                <p class="forgot-pass mb-0"><a href="/forgotPassword" class="text-dark font-weight-bold">Şifremi Unuttun?</a></p>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 mb-0">
                                            <button class="btn btn-primary btn-block">Giriş</button>
                                        </div>
                                        <div class="col-lg-12 mt-4 text-center">
                                            
                                        </div>
                                        <div class="col-12 text-center">
                                            <p class="mb-0 mt-3"><small class="text-dark mr-2">Kayıt olmak için</small> <a href="/register" class="text-dark font-weight-bold">Kayıt Ol</a></p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div><!---->
                    </div><!--end col-->
                </div><!--end row-->
            </div> <!--end container-->
            <div class="success_popup_wrapper" id="success_popup_wrapper">
                <div class="success_popup">
                  
                  <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script> 
                    <dotlottie-player src="https://lottie.host/9d87dbf5-faa7-464e-8e4f-03e1b7b7f44f/ZLe8B1lROy.json" background="transparent" speed="1" style="width: 150px; height: 150px;" loop autoplay></dotlottie-player>
                  <text id="popup_message">Giriş Başarılı</text>
                  <text id="popup_message">Yönlendiriliyorsunuz</text>
                  
                </div>
                <script>
                  document.getElementById("popup_close_btn").addEventListener("click",()=>{
                    document.getElementById("success_popup_wrapper").classList.remove("showed")
                  })
                </script>
              </div>
        </section><!--end section-->
        <!-- Hero End -->

        <!-- javascript -->
        <script src="front/js/jquery-3.5.1.min.js"></script>
        <script src="front/js/bootstrap.bundle.min.js"></script>
        <!-- Icons -->
        <script src="front/js/feather.min.js"></script>
        <script src="https://unicons.iconscout.com/release/v2.1.9/script/monochrome/bundle.js"></script>
        <!-- Main Js -->
        <script src="front/js/app.js"></script>
        <script type="module" src="js/login.js"></script>
        
        <script type="module" src="js/request.js"></script>
    </body>
</html>