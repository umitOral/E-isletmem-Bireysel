<body>


  <!-- ***** Header Area Start ***** -->
  <%- include('../partials/header-front.ejs') %>
    <!-- ***** Header Area End ***** -->

    <section>
      <div class="page-heading">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="header-text">
                <h2>İLETİŞİM</h2>
                <div class="div-dec"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>



    <!-- ***** Main Banner Area End ***** -->

    <section class="map">
      <div class="container">
        <div class="row">
          <div class="div-dec"></div>
          <div class="col-lg-10 offset-lg-1">
            <div class="row">
              <div class="col-lg-4">
                <div class="info-item">
                  <i class="fa fa-envelope"></i>
                  <h4>Email</h4>
                  <a href="#">info@archimetcrm.com</a>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="info-item">
                  <i class="fa fa-phone"></i>
                  <h4>Telefon</h4>
                  <a href="#">010-020-0340</a>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="info-item">
                  <i class="fa fa-map-marked-alt"></i>
                  <h4>Adres</h4>
                  <a href="#">Mardin, TURKEY</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  

        <section class="contact-us-form">
          <div class="container">
            <div class="row">
              <div class="col-lg-6 offset-lg-3">

              </div>
              <div class="col-lg-10 offset-lg-1">
                
                <form id="contact" action="/contactEmail" method="post">
                  <div class="col-lg-12 mb-4">
                    <h2>İletişim Formu</h2>
                    <div class="res-message"></div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <fieldset>
                        <input type="name" name="name" id="name" placeholder="İsminiz..." autocomplete="on" required>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input type="phone" name="phone" id="phone" placeholder="Telefon Numaranız..." autocomplete="on"
                          required>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input type="text" name="email" id="email" pattern="[^ @]*@[^ @]*"
                          placeholder="E-mail adresiniz..." required="">
                      </fieldset>
                    </div>

                    <div class="col-lg-12">
                      <fieldset>
                        <textarea name="message" id="message" placeholder="Mesajınız" required minlength="10"></textarea>
                      </fieldset>
                    </div>
                    <div class="col-lg-12">
                      <fieldset>
                        <button type="submit" id="form-submit" class="orange-button">Mesaj Gönder</button>
                      </fieldset>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>
        <%- include('../partials/loader.ejs') %>
          <%- include('../partials/success_popup.ejs') %>




            <%- include('../partials/front-footer.ejs') %>

              <!-- Scripts -->
              <!-- Bootstrap core JavaScript -->

              <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

              <script src="assets/js/isotope.min.js"></script>
              <script type="module" src="./js/contact-us.js"></script>
              <script type="module" src="/js/requests.js"></script>
              <script type="module" src="/js/ui.js"></script>





</body>

</html>