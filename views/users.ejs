<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="/css/users.css">
</head>

<body>
    <%- include('partials/header.ejs') %>
        <div class="container">
            <!---------- left aside ------------->
            <%- include("partials/aside.ejs") %>


                <!----------- end of sidebar ----------->

                <main>

                    <div class="header">
                        <h1> Hastalar</h1>
                    </div>


                    <div class="search">
                        <form autocomplete="off" action="./users/search">
                            <div class="autocomplete inputs">
                                <input id="myInput" type="text" name="user" placeholder="Hasta Seç">
                                <input type="submit" value="Getir">
                            </div>

                        </form>
                        <div class="add_customer_btn">Hasta Ekle +</div>

                    </div>

                    <div class="print">

                        <span class="material-symbols-sharp print-icon" title="yazdır"> print</span>
                        <div class="print-selection">
                            <label>Export As &nbsp; &#10140</label>
                            <label for="" class="to_pdf" onclick="window.print()">PDF<span
                                    class="material-symbols-sharp">picture_as_pdf</span></label>
                            <label for="" class="to_json">JSON<span class="material-symbols-sharp"></span></label>
                            <label for="" class="to_xlsx">XLSX<span
                                    class="material-symbols-sharp">description</span></label>
                        </div>

                    </div>
                    <div class="table-wrapper">
                        <table>
                            <thead>

                                <th>İsim<i class="ph-bold ph-arrow-up"></i></th>
                                <th>Soyisim<i class="ph-bold ph-arrow-up"></i></td>
                                <th>Telefon<i class="ph-bold ph-arrow-up"></i></th>

                            </thead>
                            <tbody id="userList">
                                <% users.forEach(user=> { %>
                                    <tr>

                                        <td>
                                            <%= user.name %>
                                        </td>
                                        <td>
                                            <%= user.surname %>
                                        </td>

                                        <td><span class="continue">
                                                <%= user.phone %>
                                            </span> </td>
                                        <td><a href="./users/<%= user._id %>">Detay</a></td>
                                    </tr>
                                    <% }) %>


                            </tbody>


                        </table>

                    </div>

                    <div class="pagination-describe">
                        Toplam <%= total %> hasta içerisinden <%= count %> kişi listelendi
                    </div>
                    <div class="pagination">

                        <% if (pagination.previous ) { %>
                            <a href="./users?page=<%= pagination.previous.page %>&limit=<%= pagination.previous.limit %>"><span >Önceki Sayfa<<</span></a>
                        <% } %>
                        
                        <% if (pagination.page>1) { %>
                            <a href="./users?page=<%= pagination.page-1 %>&limit=<%=3 %>"><span><%= pagination.page-1 %></span></a>
                        <% } %>
                        
                        <a href="./users?page=<%= pagination.page %>&limit=<%=3 %>"><span class="page-active"><%= pagination.page %></span></a>

                        <% if (pagination.page<pagination.lastpage) { %>
                            <a href="./users?page=<%= pagination.page+1 %>&limit=<%=3 %>"><span ><%= pagination.page+1 %></span></a>
                        <% } %>
                        

                         <% if (pagination.next) { %>
                            <a href="./users?page=<%= pagination.next.page %>&limit=<%= pagination.next.limit %>"><span> >>Sonraki Sayfa</span></a>
                        <% } %>

                    </div>

                </main>
                <div class="add_customer modal">
                    <h2>Yeni Hasta Ekle</h2>
                    <form action="./addUser" method="POST" id="register-form">
                        <div class="inputs ">
                            <span>İsim</span>
                            <input type="text" name="name" id="user-name" required
                                placeholder="Lütfen bir kullanıcı adı giriniz">
                        </div>

                        <div class="inputs ">
                            <span>Soyisim</span>
                            <input type="text" name="surname" id="surname">
                        </div>
                        <div class="options">
                            <span>Cinsiyet:</span>
                            <div>
                                <input type="radio" id="sex-women" name="sex" value="kadın" checked="checked">
                                  <label for="sex-women">Kadın</label>

                                <input type="radio" id="sex-man" name="sex" value="erkek">
                                  <label for="sex-man">Erkek</label>




                            </div>


                        </div>
                        <div class="inputs ">
                            <span>Doğum Tarihi</span>
                            <input type="date" name="birtdhDate" id="birtdhDate">
                        </div>
                        <div class="inputs ">
                            <span>Adres</span>
                            <input type="text" name="address" id="address">

                        </div>
                        <div class="inputs ">
                            <span>Telefon</span>
                            <input type="number" name="phone" id="phone">
                        </div>
                        <div class="inputs ">
                            <span>Mail</span>
                            <input type="email" name="email" id="email">
                        </div>

                        <div class="inputs ">
                            <span>Fatura Bilgisi:</span>
                            <textarea name="billingAddress" id="billingAddress" rows="2"></textarea>
                        </div>
                        <div class="inputs">
                            <span>Açıklama</span>
                            <textarea name="notes" id="notes" rows="2"></textarea>
                        </div>
                        <button type="submit" class="save_button" id="add-user">Kaydet</button>
                        <button class="cancel_button">Vazgeç</button>
                    </form>
                </div>
        </div>



        <script type="module" src="../js/requests.js"></script>
        <script type="module" src="../js/users.js"></script>

        <script src="/js/sidebar.js"></script>



</body>

</html>