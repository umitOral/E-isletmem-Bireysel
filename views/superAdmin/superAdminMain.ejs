<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/users.css">
</head>

<body>
    <%- include("../partials/aside.ejs") %>
        <section id="content">
            <!---------- left aside ------------->
            
            <%- include('../partials/header.ejs') %>

                <!----------- end of sidebar ----------->

                <main>
                    <div class="header">
                        <h1> BAYİLER</h1>
                    </div>

                    <div class="search">
                        <form autocomplete="off" action="./personels/search">
                            <div class="autocomplete form-group" style="width:300px;">
                                <input id="myInput" type="text" name="user" placeholder="Personel Seç">
                                <input type="submit" value="Ara">
                            </div>

                        </form>
                    </div>
                    <div class="print">

                        <span class="material-symbols-sharp print-icon" title="yazdır"> print</span>
                        <div class="print-selection">
                            <label>Export As &nbsp; &#10140</label>
                            <label for="" class="to_pdf" onclick="window.print()">PDF<span
                                    class="material-symbols-sharp">picture_as_pdf</span></label>
                            <label for="" class="to_json">JSON<span class="material-symbols-sharp"></span></label>
                            <label for="" class="to_xlsx">XLSX<span
                                    class="material-symbols-sharp">description</span></label>
                        </div>

                    </div>
                    <div class="table-wrapper">
                        <table >
                            <thead>
                                
                                
                                <th>companyName<span class="material-symbols-sharp">north</span></th>
                                <th>email<span class="material-symbols-sharp">north</span></th>
                                <th>authorizedName<span class="material-symbols-sharp">north</span></th>
                                <th>Register Date<span class="material-symbols-sharp">north</span></th>
                                
                               
                                
                            </thead>
                            <tbody id="userList">
                                <% companies.forEach(company=> { %>
                                    <tr>
                                        
                                        <td>
                                            <%= company.companyName %>
                                        </td>
                                        <td>
                                            <%= company.email %>
                                        </td>
                                        <td>
                                            <%= company.authorizedName %>
                                        </td>
                                        <td>
                                            <%= company.registerDate.toLocaleDateString("tr-TR")%>//
                                            <%= company.registerDate.toLocaleTimeString()%>

                                        </td>
                                        

                                        <td><a href="./companies/<%= company._id %>">Detaylar</a></td>
                                        <td><a style="display: block; background-color: red; padding: 1rem;" href="./superAdmin/companies/delete/<%= company._id %>">Sil</a></td>
                                    </tr>
                                    <% }) %>


                            </tbody>


                        </table>

                    </div>
                    
                    
                    

                </main>
            </section>


        
        <script type="module" src="../js/requests.js"></script>
        <script type="module" src="../js/users.js"></script>
        <script src="/js/sidebar.js"></script>



</body>

</html>