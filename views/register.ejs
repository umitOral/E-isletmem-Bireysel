<body>


  <!-- ***** Header Area Start ***** -->
  <%- include('./partials/header-front.ejs') %>
    <!-- ***** Header Area End ***** -->

    <section>
      <div class="page-heading">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="header-text">
                <h2>KAYIT OL</h2>
                <div class="div-dec"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ***** Main Banner Area End ***** -->
    <div class="container-login">
      <form action="/register" method="POST" id="register-form">

        <div class="input">
          <span>Kullanıcı Adı:</span>
          <input type="text" name="authorizedName" id="user-name" required
            placeholder="Lütfen bir kullanıcı adı giriniz">
        </div>

        <div class="form-group">
          <span>Email:</span>
          <input type="email" name="email" id="email" required placeholder="Lütfen mail adresinisi giriniz">
        </div>
        <div class="form-group">
          <span>Telefon:</span>
          <input type="number" name="phone" id="phone" required placeholder="Lütfen telefon numaranızı giriniz">
        </div>

        <div class="form-group">
          <span>Şifre:</span>
          <input type="password" name="password" id="password" required placeholder="lütfen şifrenizi giriniz">
        </div>
        <div class="form-group">
          <span>Şifre Tekrar:</span>

          <input type="password" name="password2" id="password2" required
            placeholder="lütfen Aynı şifreyi tekrar giriniz giriniz">
        </div>
        
        <button type="submit" id="register-btn">Kayıt Ol</button>


        <span>Hesabın varsa</span>

        <a href="/login">Giriş Yap</a>

      </form>

    </div>


    <dialog>
      <p></p><span>KAPAT</span>
      <a href="./login">GİRİŞ SAYFASINA GİT</a>
    </dialog>
    
  

    <%- include('./partials/front-footer.ejs') %>

      <!-- Scripts -->
      <!-- Bootstrap core JavaScript -->

      <script type="module" src="./js/register.js"></script>
      <script type="module" src="/js/requests.js"></script>
      
      

</body>

