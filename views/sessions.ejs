                                                        <%= service.serviceName %>
                                                    </option>
                                                    <% }) %>
                                            </select> -->
                                                    <div class="selected_proccess_type">

                                                        <!-- <div>Bakım<i class="fa-solid fa-x"></i></div> -->
                                                    </div>
                                        </div>

                                    </div>
                                    <div class="add-event-body">
                                        <div class="inputs">Hasta:
                                            <select name="user" class="proccess_type" id="processes" required>

                                                <% users.forEach(user=> { %>
                                                    <option value="<%= user._id %>">
                                                        <%= user.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>

                                        </div>
                                        <div class="inputs">Doktor:
                                            <input type="text" name="" id="" class="doktor-name" disabled>
                                        </div>
                                        <div class="inputs">Tarih:
                                            <input type="date" name="date" placeholder="Tarih" class="event-time-from"
                                                required>
                                        </div>
                                        <div class="inputs"> Saat:
                                            <select name="time" class="event-time-from" required>
                                                <option value="0">6:00-6:15</option>
                                                <option value="1">6:15-6:30</option>
                                                <option value="2">6:30-6:45</option>
                                                <option value="3">6:45-7:00</option>
                                                <option value="4">7:00-7:15</option>


                                            </select>

                                        </div>

                                        <div class="inputs">Not:
                                            <input type="text" name="description" cplaceholder="notlar"
                                                class="event-time-from">
                                        </div>

                                        <button type="submit" class="save_button">Seans Ekle +</button>

                                        <span class="cancel_button">Vazgeç</span>

                                    </div>
                                </form>






                            </div>
                            <div class="left">
                                <div class="calendar">
                                    <div class="month">
                                        <i class="fa-solid fa-chevron-left prev"></i>
                                        <div class="date1">Mayıs 2023</div>
                                        <i class="fa-solid fa-chevron-right next"></i>
                                    </div>
                                    <div class="weekdays">
                                        <div>Pazartesi</div>
                                        <div>Salı</div>
                                        <div>Çarşamba</div>
                                        <div>Perşembe</div>
                                        <div>Cuma</div>
                                        <div>Cumartesi</div>
                                        <div>Pazar</div>
                                    </div>
                                    <div class="days">

                                    </div>
                                    <div class="goto-today">
                                        <div class="goto">
                                            <input type="text" class="date-input" placeholder="mm//yyyy">
                                            <button class="goto-btn">go</button>
                                        </div>
                                        <button class="today-btn">today</button>
                                    </div>
                                </div>
                            </div>

                            <div class="right">

                                <div class="today-date">
                                    <div class="event-day">Pazartesi</div>
                                    <div class="event-date"> 22 Mayıs 2023</div>
                                </div>
                                <div class="events-all-doctors">
                                    <% doctors.forEach(doctor=> { %>
                                        <div class="single-doctor-area">
                                            <div class="doctor-name" value="<%= doctor.name %>">

                                                <%= doctor.name %>

                                            </div>
                                            <div class="single-doctor-events">
                                                <!-- <div class="event full">

                                                    <div class="center">
                                                        <span>06:00-06:15</span>
                                                        <hr>
                                                        <span>Ahmet Oral</span>
                                                    </div>
                                                    <div class="">
                                                        <span class="material-symbols-sharp edit-session">
                                                            more_vert
                                                        </span>
                                                        <div class="session-options-modal">
                                                            <a href="#">Düzenle</a>
                                                            <a href="#">Sil</a>
                                                            <a href="#">Başarılı</a>
                                                            <a href="#">İptal</a>
                                                        </div>


                                                    </div>
                                                </div>
                                                <div class="event">

                                                    <span>06:15-06:30</span>
                                                    <span class="material-symbols-sharp add-session">
                                                        add
                                                    </span>

                                                </div> -->
                                            </div>
                                        </div>
                                        <% }) %>


                                </div>











                            </div>

                        </div>
                </main>
        </div>

        <script type="module" src="/js/requests.js"></script>
        <script type="module" src="/js/ui.js"></script>
        <script type="module" src="../js/sessions.js"></script>
        <script type="module" src="/js/user_details.js"></script>

</body>

</html>