<body>
    <%- include('partials/header.ejs') %>
        <div class="container">
            <!---------- left aside ------------->
            <%- include('partials/aside.ejs') %>

                <!----------- end of sidebar ----------->

                <main>
                    <div class="header">
                        <h1> Randevular 222</h1>
                        <div class="current_date"></div>
                        <div class="main main-sessions">
                            <!-- yeni modal           -->
                            <div class="modal modal_session ">

                                <h2>Seans Ekle</h2>

                                <form action="./sessions/createsession" method="POST">
                                    <div class="inputs">


                                        <div class="title">
                                            <span>İşlem Tipi:</span>
                                            <% services.forEach(service=> { %>
                                                <input type="checkbox" id="vehicle1" name="services"
                                                    value="<%= service._id %>">
                                                <label for="vehicle1">
                                                    <%= service.serviceName %>
                                                </label><br>
                                                <% }) %>



                                                    <!-- <select name="services" class="proccess_type" id="processes" multiple>
                                                <% services.forEach(service=> { %>
